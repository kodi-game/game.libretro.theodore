<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.theodore"
		name="Thomson - MO/TO (Theodore)"
		version="0.0.1.2"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>fd|sap|k7|m7|m5|rom</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>true</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Thomson - MO/TO (Theodore)</summary>
		<description lang="en_GB">Emulator for Thomson MO/TO 8-bit computers.

Supported files: .fd, .sap, .k7, .m7, .m5, .rom</description>
		<license>GPLv3</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.theodore</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
		</assets>
	</extension>
</addon>
